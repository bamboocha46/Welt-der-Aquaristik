<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>at.varga.java</groupId>
	<artifactId>welt-der-aquaristik</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>{artifactId}</name>
	<url>http://www.priebsch.at</url>

	<properties>
		<java.version>12</java.version>
		<javafx.version>13</javafx.version>
		<maven.compiler.plugin>3.1</maven.compiler.plugin>
		<hibernate.version>5.4.12.Final</hibernate.version>
		<h2database.version>1.4.200</h2database.version>
		<!-- vonHandGecodet, würde überrascht, wenn es so funktionieren würde. -->
		<mysql.version>8.0.20</mysql.version>
		<version>5.1.32-r028</version>
		<junit.version>5.3.1</junit.version>

	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>0.0.4</version>
				<configuration>
					<mainClass>at.varga.java.welt_der_aquaristik.application.Main</mainClass>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M4</version>
			</plugin>

		</plugins>
	</build>
	<dependencies>
